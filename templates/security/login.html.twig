{% extends "base.html.twig" %} 
{% block body %}
<br>  
<div class="container">
<h1>Connexion</h1>
<br>
<form action="{{ path('security_login') }}" method="post">
  <div class="form-group">
    <input
      type="text"
      placeholder="Adresse email ..."
      required
      name="_username"
      class="form-control"
    />
  </div>
  <br>
  <div class="form-group">
    <input
      type="password"
      placeholder="Mot de passe ..."
      required
      name="_password"
      class="form-control"
    />
  </div>
  <br>

  <button type="submit" class="btn btn-primary">Connexion</button>
</form>
</div>

{% endblock %}